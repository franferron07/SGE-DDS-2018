
<div class="modal modal-content">
      <div class="modal-header text-center">
        <h3 class="modal-title w-100 font-weight-bold">Modificar Regla</h3>
      </div>


      <form action="/sge/cliente/regla/{{regla.id}}" id="form_regla" method="POST" >

      <div class="modal-body mx-3">


      <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" value="{{regla.nombre}}" placeholder="" >
      </div>

      <div class="form-group">
	      <label for="adaptador">Actuadores</label>
        <select class="mdb-select md-form" multiple="multiple" id="actuadores" name="actuadores">
          <option value="-1">(Seleccionar)</option>
          {{#each regla.actuadores_string}}
            <option value="{{id}}">{{nombre}}</option>
          {{/each}} 
        </select>
      <input name="actuadores_string" id="actuadores_string" value="" style="display:none;" />
	    </div>

	    <div class="form-group">
	      <label for="regla">Dispositivos</label>
          <select id="dispositivos" name="dispositivos" multiple="multiple">
            <option value="-1">(Seleccionar)</option>
            {{#each regla.dispositivos}}
              <option value="{{id}}" >{{detalle.nombre}}-{{detalle.descripcion}}</option>
            {{/each}} 
          </select>
        <input name="dispositivos_string" id="dispositivos_string" value="" style="display:none;" />
	    </div>


      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-primary" onclick="reglaGuardar('{{regla.id}}')">Modificar</button>
      </div>

  	 </form>

 </div>
